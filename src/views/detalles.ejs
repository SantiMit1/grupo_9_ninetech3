<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %> 
    <title>Detalles</title>
    <link rel="stylesheet" href="/css/detalles.css">
    <script src="https://kit.fontawesome.com/9a2e49d3ae.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include("./partials/header.ejs") %> 
    <main>
       <section class="main-section">
           <div class="contenedor">
               <div class="detail-left">
                <div class="tittleDesk">
                    
                    <h2><%= producto.name %> </h2>
                    <br>                    
                </div>
                
                     <div class="img-container">
                         <img src="/img/Productos/<%= producto.image %> " alt="">
                     </div>
               </div>
                    <div class="product-specification">
                        <div class="product-tittle">
                            <h2><%= producto.name %> </h2>
                        </div>
                    <div class="price-product">
                        <div class="precioEspecial">

                            <div class="descuento">
                                <h2>$<%= producto.price %> </h2>
                                <% if (producto.oldPrice && producto.discount) { %> 
                                <p><s>$<%= producto.oldPrice %> </s></p>
                                <strong><%= producto.discount %> </strong>
                                <% } %> 
                            </div>
                        <div class="precioNinetech">
                            <p><i class="fa-solid fa-hand-holding-dollar"></i>  Precio especial Ninetech</p>
                        </div>


                        </div>
                    

                        <div class="payMP">
                            <p>Paga con Mercado Pago</p>
                            <img src="/img/logoMP.png" alt="">
                            <input class="button" type="button" value="CALCULAR CUOTAS" name="">
                        </div>

                    

                        <div class="precioLista">
                            <p class="precioli"><i class="fa-solid fa-square-check"></i>  Precio de lista <strong>$<%= producto.price %></strong></p>
                            <strong>12 cuotas sin interes de $<%= Math.floor(producto.price/12) %></strong>
                            <img src="/img/ahora12.png" alt="">
                        </div>

                        <div class="cantidad-button">
                            <div class="buttonBuy">
                                <select class="seleccionador" name="" id=""> 
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                </select>
                                <input type="button" value="COMPRAR" class="buttonB"></div>
                        </div>

                        

                    </div>
                </div>
       </section>
            </div>
            <hr>

       <section class="descriptionSection">
            <div class="descriptionSectionDetails">
                <div class="detailsTittle">
                    <h2>Especificaciones:</h2>
                </div>
                <div class="details">
                    <ul>
                        <% producto.description.forEach(element => { %>
                            <li><%= element %> </li>
                        <% }) %>
                    </ul>
                </div>
                <hr>
            </div>
        </section>
       <section class="similarProducts">
            <h2>PRODUCTOS SIMILARES</h2>
            <div class="productListing">
                <article class="similarProd">
                    <div class="simProdImg"><img src="/img/Productos/fuente cooler master.jpg" width="200px" alt="FUENTE COOLER MASTER 850W"></div>
                    <div class="details">
                        <h3 class="productSimDetail">$ 36289</h3>
                        <p>FUENTE COOLER MASTER 850W V2 80+ GOLD FULL MODULAR</p>
                        <a href="#">Ver mas</a>
                    </div>
                </article>
                <article class="similarProd">
                    <div class="simProdImg"><img src="/img/Productos/gtx 1660.jpg"  alt="EVGA GTX 1660"></div>
                    <div class="details">
                        <h3 class="productSimDetail">$ 36289</h3>
                        <p>PLACA DE VIDEO EVGA GTX 1660 SUPER SC ULTRA 6GB</p>
                        <a href="#">Ver mas</a>
                    </div>
                </article>
                <article class="similarProd">
                    <div class="simProdImg"><img src="/img/Productos/disco hdd.jpg"  alt="DISCO DURO HDD 1 TB"></div>
                    <div class="details">
                        <h3 class="productSimDetail">$ 36289</h3>
                        <p>DISCO DURO HDD 1 TB WESTERN DIGITAL WD BLUE</p>
                        <a href="#">Ver mas</a>
                    </div>
                </article>
                <article class="similarProd">
                    <div class="simProdImg"><img src="/img/Productos/disco ssd.jpg"  alt="DISCO SOLIDO SSD 240GB"></div>
                    <div class="details">
                        <h3 class="productSimDetail">$ 36289</h3>
                        <p>DISCO SOLIDO SSD 240GB KINGSTON A400 SATA III</p>
                        <a href="#">Ver mas</a>
                    </div>
                </article>
                
                
            </div>
       </section>
    </main>
    <%- include("./partials/footer.ejs") %> 
    <script src="js/burger.js"></script>
</body>
</html>